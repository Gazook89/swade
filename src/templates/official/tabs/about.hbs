<nav class='about-tabs sub-tabs' data-group='about'>
  <a
    class='item section-header active'
    data-tab='advances'
    data-group='about'
  >{{localize 'SWADE.Adv'}}</a>
  <a
    class='item section-header'
    data-tab='background'
    data-group='about'
  >{{localize 'SWADE.Background'}}</a>
  <a class='item section-header' data-tab='notes' data-group='about'>{{localize
      'SWADE.Notes'
    }}</a>
</nav>
<section class='about-body'>
  <section class='tab advances active' data-group='about' data-tab='advances'>
    {{#if (eq data.data.advances.mode 'expanded')}}
      <span class='advance-add'>
        <button type='button' class='item-create' data-type='advance'>
          <i class='fa fa-plus'></i>{{localize 'SWADE.AddAdvance'}}
        </button>
      </span>
      {{#each advances.list}}
        <h2>{{rank}}</h2>
        <ol class='advance-track'>
          {{#each list}}
            <li class='form-group advance' data-advance-id='{{id}}'>
              {{#if planned}}
                <span class='faded'>{{sort}}</span>
                <span class='faded'>{{advanceType type}}</span>
                <span class='faded'>{{enrich notes}}</span>
              {{else}}
                <span>{{sort}}</span>
                <span>{{advanceType type}}</span>
                <span>{{enrich notes}}</span>
              {{/if}}
              <span class='item-controls'>
                {{#if planned}}
                  <button
                    type='button'
                    class='advance-action'
                    data-action='toggle-planned'
                    title='{{localize "SWADE.Advances.Toggle"}}'
                  >
                    <i class='fas fa-hourglass'></i>
                  </button>
                {{else}}
                  <button
                    type='button'
                    class='advance-action faded'
                    data-action='toggle-planned'
                    title='{{localize "SWADE.Advances.Toggle"}}'
                  >
                    <i class='fas fa-hourglass'></i>
                  </button>
                {{/if}}
                <button
                  type='button'
                  class='advance-action'
                  data-action='edit'
                  title='{{localize "SWADE.Ed"}}'
                >
                  <i class='fas fa-edit'></i>
                </button>
                <button
                  type='button'
                  class='advance-action'
                  data-action='delete'
                  title='{{localize "SWADE.Del"}}'
                >
                  <i class='fas fa-trash'></i>
                </button>
              </span>
            </li>
          {{/each}}
        </ol>
      {{/each}}
    {{else}}
      {{editor
        content=data.data.advances.details
        target='data.advances.details'
        button=owner
        owner=owner
        editable=editable
      }}
    {{/if}}
  </section>
  <section class='tab background' data-group='about' data-tab='background'>
    <div class='editor-container'>
      <header class='section-header'>{{localize 'SWADE.Appearance'}}</header>
      {{editor
        content=data.data.details.appearance
        target='data.details.appearance'
        button=owner
        owner=owner
        editable=editable
      }}
    </div>
    <div class='editor-container'>
      <header class='section-header'>{{localize
          'SWADE.CharacterGoals'
        }}</header>
      {{editor
        content=data.data.details.goals
        target='data.details.goals'
        button=owner
        owner=owner
        editable=editable
      }}
    </div>
    <div class='editor-container'>
      <header class='section-header'>{{localize 'SWADE.Biography'}}</header>
      {{editor
        content=data.data.details.biography.value
        target='data.details.biography.value'
        button=owner
        owner=owner
        editable=editable
      }}
    </div>
  </section>
  <section class='tab actor-notes' data-group='about' data-tab='notes'>
    {{editor
      content=data.data.details.notes
      target='data.details.notes'
      button=owner
      owner=owner
      editable=editable
    }}
  </section>
</section>