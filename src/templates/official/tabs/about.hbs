<nav class='about-tabs sub-tabs' data-group='about'>
  <a
    class='item section-header active'
    data-tab='advances'
    data-group='about'
  >{{localize 'SWADE.Adv'}}</a>
  <a
    class='item section-header'
    data-tab='biography'
    data-group='about'
  >{{localize 'SWADE.Biography'}}</a>
  <a class='item section-header' data-tab='notes' data-group='about'>{{localize
      'SWADE.Notes'
    }}</a>
</nav>
<section class='about-body'>
  <section class='tab advances active' data-group='about' data-tab='advances'>
    {{#if (eq data.data.advances.mode 'expanded')}}
      <span class="advance-add">
      <button type='button' class='item-create' data-type='advance'>
        <i class='fa fa-plus'></i>{{localize 'SWADE.AddAdvance'}}
      </button>
      </span>
      {{#each advances.list}}
      {{!-- <div class="section-header">{{rank}}</div> --}}
      <h2>{{rank}}</h2>
      <ol class="advance-track">
          {{#each list}}
          <li class='form-group advance {{#if planned}}planned{{/if}}' data-advance-id='{{id}}'>
            <div>{{advanceType type}}</div>
            <div>{{enrich notes}}</div>
            <div class="item-controls">
              <button type="button" class='advance-action' data-action='toggle-planned' title='{{localize "SWADE.Advances.Toggle"}}'>
                <i class='fas fa-hourglass'></i>
              </button>
              <button type="button" class='advance-action' data-action='edit' title='{{localize "SWADE.Ed"}}'>
                <i class='fas fa-edit'></i>
              </button>
              <button type="button" class='advance-action' data-action='delete' title='{{localize "SWADE.Del"}}'>
                <i class='fas fa-trash'></i>
              </button>
            </div>
          </li>
          {{/each}}
      </ol>
        {{/each}}
    {{else}}
      {{editor
        content=data.data.advances.details
        target='data.advances.details'
        button=true
        owner=owner
        editable=editable
      }}
    {{/if}}
  </section>
  <section class='tab biography' data-group='about' data-tab='biography'>
    {{editor
      content=data.data.details.biography.value
      target='data.details.biography.value'
      button=true
      owner=owner
      editable=editable
    }}
  </section>
  <section class='tab notes' data-group='about' data-tab='notes'>
    <p>Notes</p>
  </section>
</section>