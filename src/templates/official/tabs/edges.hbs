<span class='edges'>
  <header class='section-header'>
    <span class='name'>{{localize 'SWADE.Edges'}}</span>
    <button type='button' class='item-create controls' data-type='edge'>
      <i class='fa fa-plus'></i>{{localize 'SWADE.Add'}}
    </button>
  </header>
  <ul>
    {{#each itemTypes.edge}}
      <li class='edge-hindrance item' data-item-id='{{id}}'>
        <button type="button" class="item-img item-show" style="background-image: url('{{img}}');" title="{{localize 'SWADE.ShowInChat'}}"/>
        <button type="button" class="name item-name" title="{{localize "SWADE.ExpandDescription"}}">{{name}}</button>
        <div class='item-controls'>
        {{#if isOwner}}
        <button
          type="button"
          class="item-toggle {{#unless data.data.favorite}}item-unequipped{{/unless}}"
          data-toggle="data.favorite"
          title="{{localize "SWADE.Favorite"}}"
        >
          <i class="fas fa-star"></i>
        </button>
        <button type='button' class='item-edit' title="{{localize 'SWADE.Ed'}}">
          <i class='fas fa-edit'></i>
        </button>
        {{/if}}
        </div>
        <div class='description'>{{enrich data.data.description}}</div>
      </li>
    {{/each}}
  </ul>
  <header class='section-header'>
    <span class='name'>{{localize 'SWADE.Hindrances'}}</span>
    <button type='button' class='item-create controls' data-type='hindrance'>
      <i class='fa fa-plus'></i>{{localize 'SWADE.Add'}}
    </button>
  </header>
  <ul>
    {{#each itemTypes.hindrance}}
    <li class='edge-hindrance item' data-item-id='{{id}}'>
      <button type="button" class="item-img item-show" style="background-image: url('{{img}}');" title="{{localize 'SWADE.ShowInChat'}}"/>
      <button type="button" class="name item-name" title="{{localize "SWADE.ExpandDescription"}}" >
        {{name}} {{#if data.data.major}}{{localize 'SWADE.Major' }}{{else}}{{localize 'SWADE.Minor'}}{{/if}}
      </button>
      <div class='item-controls'>
      {{#if isOwner}}
      <button
        type="button"
        class="item-toggle {{#unless data.data.favorite}}item-unequipped{{/unless}}"
        data-toggle="data.favorite"
        title="{{localize "SWADE.Favorite"}}"
      >
        <i class="fas fa-star"></i>
      </button>
      <button type='button' class='item-edit' title="{{localize 'SWADE.Ed'}}">
        <i class='fas fa-edit'></i>
      </button>
      {{/if}}
      </div>
      <div class='description'>{{enrich data.data.description}}</div>
    </li>
    {{/each}}
  </ul>
  <header class='section-header'>
    <span class='name'>{{localize 'SWADE.SpecialAbilities'}}</span>
    <button type='button' class='item-create controls' data-type='ability'>
      <i class='fa fa-plus'></i>{{localize 'SWADE.Add'}}
    </button>
  </header>
  <ul>
    {{#each itemTypes.ability}}
    <li class='edge-hindrance item' data-item-id='{{id}}'>
      <button type="button" class="item-img item-show" style="background-image: url('{{img}}');" title="{{localize 'SWADE.ShowInChat'}}"/>
      <button type="button" class="name item-name" title="{{localize "SWADE.ExpandDescription"}}" >{{name}}</button>
      <div class='item-controls'>
      {{#if isOwner}}
      <button
        type="button"
        class="item-toggle {{#unless data.data.favorite}}item-unequipped{{/unless}}"
        data-toggle="data.favorite"
        title="{{localize "SWADE.Favorite"}}"
      >
        <i class="fas fa-star"></i>
      </button>
      <button type='button' class='item-edit' title="{{localize 'SWADE.Ed'}}">
        <i class='fas fa-edit'></i>
      </button>
      {{/if}}
      </div>
      <div class='description'>{{enrich data.data.description}}</div>
    </li>
    {{/each}}
  </ul>
</span>