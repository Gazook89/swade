<form class="{{cssClass}}" autocomplete="off">
    <main class="sheet-body">
        <div class="form-group">
            <label>{{localize "SWADE.SetGroupColor"}}</label>
            <div class="form-fields">
                <input type="color" title="Select a color" id="groupColor" value="{{groupColor this.object.id}}"
                    data-edit="groupColor"/>
            </div>
        </div>
        <div class="form-group">
            <button class="reset-color">Reset color to default</button>
        </div>
    </main>
</form>